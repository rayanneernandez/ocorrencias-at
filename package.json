{
  "name": "radci",
  "version": "1.0.0",
  "description": "Sistema de Registro e Análise de Dados para Cidades Inteligentes - Plataforma para registro de ocorrências urbanas e gestão de dados municipais",
  "main": "index.php",
  "scripts": {
    "dev": "php -S localhost:8000",
    "build": "echo 'Build process for PHP project'",
    "start": "php -S localhost:8000",
    "lint": "echo 'Linting PHP files'",
    "test": "echo 'No tests specified'",
    "deploy": "vercel --prod",
    "preview": "vercel"
  },
  "keywords": [
    "smart-city",
    "urban-management",
    "php",
    "mysql",
    "tailwindcss",
    "leaflet",
    "geocoding",
    "civic-engagement",
    "municipal-management",
    "occurrence-reporting"
  ],
  "author": "RADCI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/radci.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/radci/issues"
  },
  "homepage": "https://github.com/your-username/radci#readme",
  "engines": {
    "node": ">=16.0.0",
    "php": ">=8.1.0"
  },
  "dependencies": {
    "tailwindcss": "^3.4.0",
    "leaflet": "^1.9.4",
    "lucide": "^0.300.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "config": {
    "php_version": "8.1",
    "mysql_version": "8.0"
  },
  "vercel": {
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.6.0"
      },
      "pages/*.php": {
        "runtime": "vercel-php@0.6.0"
      },
      "includes/*.php": {
        "runtime": "vercel-php@0.6.0"
      }
    }
  },
  "directories": {
    "lib": "./includes",
    "doc": "./docs",
    "test": "./tests"
  },
  "files": [
    "api/",
    "assets/",
    "includes/",
    "pages/",
    "uploads/",
    "index.php",
    "vercel.json",
    "README.md"
  ]
}