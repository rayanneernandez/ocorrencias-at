{
  "version": 2,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "dest": "/assets/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1"
    },
    {
      "src": "^/(?!api/)(.+)\\.php$",
      "dest": "/api/$1.php"
    },
    {
      "src": "^/$",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "PHP_VERSION": "8.1"
  },
  "regions": ["gru1"],
  "github": {
    "enabled": false
  }
}